<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/yellow"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_next_class"
            style="@style/Signature_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ближайшее занятие"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/Signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сегодня в 12:00"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_next_class" />

        <FrameLayout
            android:id="@+id/fl_image_search"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_translucent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_search" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_status_passed"
            style="@style/Signature_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пройдено"
            app:layout_constraintBottom_toTopOf="@+id/tv_number_passed"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_number_passed"
            style="@style/Signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="2 курса"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_status_left"
            style="@style/Signature_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Осталось"
            app:layout_constraintBottom_toTopOf="@+id/tv_number_left"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_number_left"
            style="@style/Signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="end"
            android:text="14 занятий"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dark_gray_highlighter"
            android:paddingHorizontal="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_chat"
                style="@style/Button_name_color_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Показать чат"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_status_chat"
                style="@style/Button_name_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Нет новых"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:divider="@drawable/separator"
        android:showDividers="middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

        <FrameLayout
            android:layout_width="286dp"
            android:layout_height="32dp"
            android:paddingStart="12dp"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_light_gray_left"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/tv_latest_courses"
                style="@style/Button_name_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Последние курсы" />
        </FrameLayout>

        <Button
            style="@style/Button_custom"
            android:id="@+id/btn_all_courses"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/bg_light_gray_right"
            android:text="Все" />
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_card_course"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <include
        android:id="@+id/container_label"
        layout="@layout/task_status_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@+id/vp_card_course"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:divider="@drawable/separator"
        android:showDividers="middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_label">

        <FrameLayout
            android:layout_width="286dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_light_gray_left"
            android:paddingVertical="6dp"
            android:paddingStart="12dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/tv_your_notes"
                style="@style/Button_name_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ваши заметки" />
        </FrameLayout>

        <Button
            android:id="@+id/btn_all_notes"
            style="@style/Button_custom"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/bg_light_gray_right"
            android:text="Все" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_with_one_corner_y"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp">

            <TextView
                android:id="@+id/tv_title_note"
                style="@style/Main_title_black"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:lines="2"
                android:maxLines="2"
                android:text="Для создания новой Activity"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_description_note"
                style="@style/Main_title_black_extension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Нужно лишь применить старый дедовский визард"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_note" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/fl_date_note"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_dark_gray_highlighter">

            <TextView
                style="@style/Clarification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="12 июля" />
        </FrameLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:divider="@drawable/separator"
        android:showDividers="middle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <FrameLayout
            android:layout_width="286dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_light_gray_left"
            android:paddingVertical="6dp"
            android:paddingStart="12dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/tv_community_notes"
                style="@style/Button_name_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Заметки сообщества" />
        </FrameLayout>

        <Button
            android:id="@+id/btn_all_community_notes"
            style="@style/Button_custom"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/bg_light_gray_right"
            android:text="Все" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_with_two_corners_y"
            android:paddingHorizontal="12dp"
            android:paddingTop="26dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_title_note_community"
                style="@style/Main_title_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:lines="2"
                android:maxLines="2"
                android:text="Тест для текста в несколько строк."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_description_note_community"
                style="@style/Main_title_black_extension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Это очень важный момент. Его нужно проверять постоянно."
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title_note_community" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/fl_owner_community_note"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/bg_dark_gray_highlighter">

            <TextView
                android:id="@+id/tv_owner_name"
                style="@style/Clarification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Имя Фамилия" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_date_community_note"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_dark_gray_highlighter">

            <TextView
                style="@style/Clarification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="12 июля" />
        </FrameLayout>
    </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>